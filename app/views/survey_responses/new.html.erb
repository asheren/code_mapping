<%= form_for @survey_response, url: {action: "create"} do |f| %>
  <%= f.label :perceived_code_confidence, "On a scale of 1-10, How confident am I in my coding abilities today?" %>
  <%= f.select(:perceived_code_confidence, options_for_select(1..10), {include_blank: true}) %>
  <%= f.label :material_difficulty_rating, "On a scale of 1-10, How difficult is the material I am working on?" %>
  <%= f.select(:material_difficulty_rating, options_for_select(1..10),{include_blank: true}) %>
  <%= f.label :notes, "Notes" %>
  <%= f.text_area :notes %>
  <%= f.submit "Submit" %>

